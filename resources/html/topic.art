<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      html,
      body {
        font-size: 14px;
      }
      hr {
        transform: scaleY(0.25);
        margin: 20px 0;
      }
      .container {
        width: 700px;
        padding: 20px;
        margin: 0 auto;
      }
      .header {
        display: flex;
        flex-direction: row;
        align-items: center;
      }
      .header h1 {
        flex: 1;
        padding-right: 20px;
      }
      .header img {
        width: 73px;
        height: 73px;
        flex-shrink: 0;
        border-radius: 4px;
      }
      .meta {
        display: flex;
        align-items: center;
      }
      .meta span {
        opacity: 0.5;
        padding-left: 10px;
      }
      .content {
        line-height: 1.5;
      }
      .content p {
        margin: 10px 0;
      }
      .content img {
        max-width: 100% !important;
      }
      .content.append h2 {
        padding-bottom: 10px;
      }
      .reply h2 {
        padding-bottom: 10px;
      }
      .reply-item {
        display: flex;
        flex-direction: row;
      }
      .reply-item__avatar {
        width: 48px;
        height: 48px;
        border-radius: 4px;
      }
      .reply-item-wrap {
        margin-left: 10px;
        flex: 1;
      }
      .reply-item-wrap-meta {
        display: flex;
        flex-direction: row;
        align-items: center;
      }
      .reply-item-wrap-meta__time {
        padding-left: 10px;
        flex: 1;
        opacity: 0.5;
      }
      .reply-item-wrap-meta__floor {
        font-size: 9px;
        min-width: 20px;
        height: 20px;
        line-height: 20px;
        text-align: center;
        font-weight: 500;
        border-radius: 10px;
        display: inline-block;
        background-color: darkslategray;
        color: lightgray;
        padding: 0 5px;
      }
      .reply-item-wrap-content {
        margin-top: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- 标题 -->
      <div class="header">
        <h1>{{title}}</h1>
        <img src="{{authorAvatar}}" alt="avatar" />
      </div>

      <!-- 作者、时间 -->
      <div class="meta">
        <a href="https://www.v2ex.com/member/{{authorName}}">{{authorName}}</a>
        <span> · {{displayTime}} · {{visitCount}}</span>
      </div>
      <hr />

      <!-- 正文 -->
      <div class="content">
        {{@ content}}
      </div>
      <hr />

      <!-- 附言 -->
      {{each appends}}
      <div class="content append">
        <h2>第 {{ $index + 1 }} 条附言</h2>
        {{@ $value.content}}
      </div>
      <hr />
      {{/each}}

      <!-- 评论 -->
      <div class="reply">
        <h2>共 {{replyCount}} 条回复</h2>
        {{each replies}}
        <div class="reply-item">
          <img class="reply-item__avatar" src="{{$value.userAvatar}}" alt="" />
          <div class="reply-item-wrap">
            <div class="reply-item-wrap-meta">
              <a href="https://www.v2ex.com/member/{{$value.userName}}">{{$value.userName}}</a>
              <span class="reply-item-wrap-meta__time">{{$value.time}}</span>
              <span class="reply-item-wrap-meta__floor">{{$value.floor}}</span>
            </div>
            <div class="reply-item-wrap-content">
              {{@ $value.content}}
            </div>
          </div>
        </div>
        <hr />
        {{/each}}
      </div>
    </div>
  </body>
</html>
