<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ topic.title }}</title>
    <base href="https://www.v2ex.com" />
    <link rel="stylesheet" href="{{ cssPath }}" />
  </head>
  <body>
    <div class="container">
      <!-- 标题 -->
      <div class="topic-header">
        <h1>{{ topic.title }}</h1>
        <!-- <img src="{{authorAvatar}}" alt="avatar" /> -->
      </div>

      <!-- 作者、时间 -->
      <div class="topic-meta">
        <a class="node" href="/go/{{ topic.node }}">{{ topic.nodeName }}</a>
        <a class="user text-bold" href="/member/{{ topic.authorName }}">{{ topic.authorName }}</a>
        <span class="time"> · {{ topic.displayTime }} · {{ topic.visitCount }}</span>
      </div>
      <hr />

      <!-- 正文 -->
      {{if topic.content}}
      <div class="topic-content">
        {{@ topic.content}}
      </div>
      <hr />
      {{/if}}

      <!-- 附言 -->
      {{each topic.appends}}
      <div class="topic-content append">
        <h2>第 {{ $index + 1 }} 条附言</h2>
        {{@ $value.content}}
      </div>
      <hr />
      {{/each}}

      <!-- 评论 -->
      <div class="reply">
        {{if topic.replies.length}}
        <h2>共 {{ topic.replyCount }} 条回复</h2>
        {{else}}
        <h2>暂无回复</h2>
        {{/if}}
        {{each topic.replies}}
        <div class="reply-item">
          <!-- <img class="avatar" src="{{$value.userAvatar}}" alt="" /> -->
          <div class="reply-item-wrap">
            <div class="meta">
              <a class="user text-bold {{ topic.authorName === $value.userName ? 'user--author' : '' }}" href="/member/{{ $value.userName }}">{{
                $value.userName
              }}</a>
              <span class="time">{{ $value.time }}</span>
              <span class="floor">{{ $value.floor }}</span>
            </div>
            <div class="topic-content">
              {{@ $value.content}}
            </div>
          </div>
        </div>
        <hr />
        {{/each}}
      </div>
    </div>

    <script>
      // 给图片添加查看大图的功能
      const vscode = acquireVsCodeApi();
      const images = document.querySelectorAll('.topic-content img');
      images.forEach((img) => {
        img.onload = () => {
          if (img.width < 100 && img.height < 100) {
            return;
          }
          img.style.cursor = 'zoom-in';
          img.onclick = () => {
            console.log(img.src);
            vscode.postMessage({
              command: 'browserImage',
              src: img.src
            });
          };
        };
      });
    </script>
  </body>
</html>
